<Application x:Class="Ink_Canvas_Better.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Ink_Canvas_Better"
             xmlns:ui="http://schemas.inkore.net/lib/ui/wpf/modern"
             StartupUri="Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="ui:FontIcon">
                <Setter Property="Foreground" Value="{DynamicResource DefaultForegroundColor}"/>
            </Style>
            <FontFamily x:Key="FluentIconFontFamily">pack://application:,,,/Resources/#Segoe Fluent Icons</FontFamily>

            <!-- TODO -->
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemeResources/>
                <ui:XamlControlsResources/>
                <ResourceDictionary Source="/Resources/Styles/Light.xaml"/>

                <ResourceDictionary Source="/Resources/Image/OthersImageDictionary.xaml"/>
                <ResourceDictionary Source="/Resources/Image/DrawShapeImageDictionary.xaml"/>
                <ResourceDictionary Source="/Resources/Language/en.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
